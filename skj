import sys
from datetime import datetime


def parse_schedule(lines):
    schedule = {}
    current_day = None

    for line in lines:
        line = line.rstrip("\n")
        if not line:
            continue
        if line.isalpha():
            current_day = line.lower()
            schedule[current_day] = []
        else:
            if current_day is not None:
                schedule[current_day].append(line)
    return schedule


def show_day(schedule, day):
    if day in schedule:
        for item in schedule[day]:
            print(item)


def show_week(schedule):
    for day in [
        "monday", "tuesday", "wednesday",
        "thursday", "friday", "saturday", "sunday"
    ]:
        if day in schedule:
            print(day)
            for item in schedule[day]:
                print(f"  {item}")


def main():
    lines = sys.stdin.read().splitlines()
    if not lines:
        return

    cmd = lines[0].strip().lower()
    schedule_lines = lines[1:]

    schedule = parse_schedule(schedule_lines)

    weekdays = {
        "monday", "tuesday", "wednesday",
        "thursday", "friday", "saturday", "sunday"
    }

    if cmd == "today":
        today = datetime.now().strftime("%A").lower()
        show_day(schedule, today)

    elif cmd == "week":
        show_week(schedule)

    elif cmd in weekdays:
        show_day(schedule, cmd)

    else:
        pass  


if __name__ == "__main__":
    main()
