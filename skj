import sys
import datetime

SCHEDULE = {
    "monday": [
        "1限: a",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
    "tuesday": [
        "1限: b",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
    "wednesday": [
        "1限: c",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
    "thursday": [
        "1限: d",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
    "friday": [
        "1限: e",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
    "saturday": [
        "1限: f",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
    "sunday": [
        "1限: g",
        "2限: a",
        "3限: a",
        "4限: a",
        "5限: a",
        "6限: a",
        "メモ: a"
    ],
}

def print_day(day: str):
    for line in SCHEDULE[day]:
        print(line)

def main():
    data = sys.stdin.read()

    if data == "":
        today = datetime.datetime.today().strftime("%A").lower()
        if today in SCHEDULE:
            print_day(today)
            return 0
        return 1

    day = data.strip().lower()

    if day == "week":
        for d in [
            "monday", "tuesday", "wednesday",
            "thursday", "friday", "saturday", "sunday"
        ]:
            print(d)
            for line in SCHEDULE[d]:
                print(f"  {line}")
        return 0

    if day in SCHEDULE:
        print_day(day)
        return 0

    return 1


if __name__ == "__main__":
    sys.exit(main())
